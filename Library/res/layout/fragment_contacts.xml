						    android:layout_height="wrap_content"
						    android:orientation="vertical">
						    <TextView 
						        android:layout_width="match_parent"
						        android:layout_height="wrap_content"
    							android:textStyle="bold"
    							android:textSize="@dimen/contacts_text"
    							android:textColor="@color/app_black"
    							android:text="@string/contacts_matrika"
						        />
						    
						    <TextView 
						        android:id="@+id/matrika_tel"
						        android:layout_width="match_parent"
						        android:layout_height="wrap_content"
    							android:textSize="@dimen/contacts_text"
    							android:textColor="@color/app_link"
    							android:text="@string/matrika_tel"
						        />
						    
						    <TextView 
						        android:layout_width="match_parent"
						        android:layout_height="wrap_content"
    							android:textStyle="bold"
    							android:textSize="@dimen/contacts_text"
    							android:textColor="@color/app_black"
    							android:text="@string/contacts_checking"
						        />
						    
						    <TextView 
						        android:id="@+id/checking_tel"
						        android:layout_width="match_parent"
						        android:layout_height="wrap_content"
    							android:textSize="@dimen/contacts_text"
    							android:textColor="@color/app_link"
    							android:text="@string/checking_tel"
						        />
						    <TextView 
						        android:layout_width="match_parent"
						        android:layout_height="wrap_content"
    							android:textStyle="bold"
    							android:textSize="@dimen/contacts_text"
    							android:textColor="@color/app_black"
    							android:text="@string/contacts_evidence"
						        />
						    
						    <TextView
						        android:id="@+id/evidence_tel" 
						        android:layout_width="match_parent"
						        android:layout_height="wrap_content"
    							android:textSize="@dimen/contacts_text"
    							android:textColor="@color/app_link"
    							android:text="@string/evidence_tel"
						        />
						    
						    <TextView 
						        android:layout_width="match_parent"
						        android:layout_height="wrap_content"
    							android:textStyle="bold"
    							android:textSize="@dimen/contacts_text"
