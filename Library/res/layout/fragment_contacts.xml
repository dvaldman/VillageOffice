						        />
						    
						    <TextView 
						        android:id="@+id/mayors_office_mail"
						        android:layout_width="match_parent"
						        android:layout_height="wrap_content"
    							android:textSize="@dimen/contacts_text"
    							android:textColor="@color/app_link"
    							android:text="@string/mayors_office_mail"
    							android:layout_weight="8"
						        />
						    
						</LinearLayout>
						
						
						<LinearLayout 
						    android:layout_marginTop="@dimen/contacts_section_offset"
